<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterUtils</filter-name>
        <filter-class>br.com.senac.tads3a.asterix.utils.FilterUtils</filter-class>
    </filter>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSistema</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletSistema</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAluno</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCurso</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFuncionario</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUnidade</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletUnidade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMatricula</servlet-name>
        <servlet-class>br.com.senac.tads3a.asterix.servlets.ServletMatricula</servlet-class>
    </servlet>
    <filter-mapping>
        <filter-name>FilterUtils</filter-name>        
        <url-pattern>/cadastrar-aluno</url-pattern>
        <url-pattern>/cadastrar-curso</url-pattern>
        <url-pattern>/cadastrar-funcionario</url-pattern>
        <url-pattern>/cadastrar-unidade</url-pattern>
        <url-pattern>/aluno_alterar</url-pattern>
        <url-pattern>/aluno_excluir</url-pattern>
        <url-pattern>/curso_alterar</url-pattern>
        <url-pattern>/curso_excluir</url-pattern>
        <url-pattern>/funcionario_alterar</url-pattern>
        <url-pattern>/funcionario_excluir</url-pattern>
        <url-pattern>/matricula_alterar</url-pattern>
        <url-pattern>/matricula_excluir</url-pattern>
        <url-pattern>/unidade_alterar</url-pattern>
        <url-pattern>/unidade_excluir</url-pattern>
        <url-pattern>/manutencao-alunos</url-pattern>
        <url-pattern>/manutencao-cursos</url-pattern>
        <url-pattern>/manutencao-funcionarios</url-pattern>
        <url-pattern>/manutencao-unidades</url-pattern>
        <url-pattern>/manutencao-matriculas</url-pattern>
        <url-pattern>/matricular</url-pattern>
        <url-pattern>/relatorio</url-pattern>        
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSistema</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/cadastrar-aluno</url-pattern>
        <url-pattern>/cadastrar-curso</url-pattern>
        <url-pattern>/cadastrar-funcionario</url-pattern>
        <url-pattern>/cadastrar-unidade</url-pattern>        
        <url-pattern>/manutencao-alunos</url-pattern>
        <url-pattern>/manutencao-cursos</url-pattern>
        <url-pattern>/manutencao-funcionarios</url-pattern>
        <url-pattern>/manutencao-unidades</url-pattern>
        <url-pattern>/manutencao-matriculas</url-pattern>
        <url-pattern>/matricular</url-pattern>
        <url-pattern>/relatorio</url-pattern>
        <url-pattern>/success</url-pattern>
        <url-pattern>/warning</url-pattern>
        <url-pattern>/blocked</url-pattern>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAluno</servlet-name>
        <url-pattern>/aluno_inserir</url-pattern>
        <url-pattern>/aluno_alterar</url-pattern>
        <url-pattern>/aluno_atualizar</url-pattern>
        <url-pattern>/aluno_buscar</url-pattern>
        <url-pattern>/aluno_listar</url-pattern>
        <url-pattern>/aluno_excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCurso</servlet-name>
        <url-pattern>/curso_inserir</url-pattern>
        <url-pattern>/curso_alterar</url-pattern>
        <url-pattern>/curso_atualizar</url-pattern>
        <url-pattern>/curso_buscar</url-pattern>
        <url-pattern>/curso_listar</url-pattern>
        <url-pattern>/curso_excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFuncionario</servlet-name>
        <url-pattern>/funcionario_inserir</url-pattern>
        <url-pattern>/funcionario_alterar</url-pattern>
        <url-pattern>/funcionario_atualizar</url-pattern>
        <url-pattern>/funcionario_buscar</url-pattern>
        <url-pattern>/funcionario_listar</url-pattern>
        <url-pattern>/funcionario_excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUnidade</servlet-name>
        <url-pattern>/unidade_inserir</url-pattern>
        <url-pattern>/unidade_alterar</url-pattern>
        <url-pattern>/unidade_atualizar</url-pattern>
        <url-pattern>/unidade_buscar</url-pattern>
        <url-pattern>/unidade_listar</url-pattern>
        <url-pattern>/unidade_excluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMatricula</servlet-name>
        <url-pattern>/matricula_inserir</url-pattern>
        <url-pattern>/matricula_alterar</url-pattern>
        <url-pattern>/matricula_atualizar</url-pattern>
        <url-pattern>/matricula_buscar</url-pattern>
        <url-pattern>/matricula_listar</url-pattern>
        <url-pattern>/matricula_excluir</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
